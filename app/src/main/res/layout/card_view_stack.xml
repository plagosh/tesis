<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewStack"
        android:layout_width="match_parent"
        card_view:contentPadding="10sp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fotoDePerfilPDC"
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:src="@drawable/ic_baseline_supervised_user_circle_24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5sp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreStack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Paulina Lagos ha terminado la tarea:"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/nombreTarea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tarea"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/horaTarea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkeado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>